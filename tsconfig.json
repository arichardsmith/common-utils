{
  "include": ["src", "./tsup.config.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"], // Need to include lib.dom to get URL types

    "module": "ESNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    "declaration": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
